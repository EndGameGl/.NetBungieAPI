<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Title>DotNetBungieAPI.Service.Abstractions</Title>
    <RepositoryUrl>https://github.com/EndGameGl/DotNetBungieAPI</RepositoryUrl>
    <PackageId>DotNetBungieAPI.Service.Abstractions</PackageId>
    <Description>Bungie.net API service abstractions.</Description>
    <Authors>MeGl</Authors>
    <Copyright>Copyright (c) MeGl 2024</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>DotNetBungieAPI.Service.Abstractions</RootNamespace>
    <PackageVersion>2.13.0</PackageVersion>
    <AssemblyVersion>2.13.0</AssemblyVersion>
    <FileVersion>2.13.0</FileVersion>
    <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
    <LangVersion>12</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="DotNetBungieAPI.Models" Version="2.13.0" />
  </ItemGroup>

  <PropertyGroup Condition=" '$(Configuration)' == 'Release' ">
    <DocumentationFile>bin\Release\DotNetBungieAPI.Service.Abstractions.xml</DocumentationFile>
  </PropertyGroup>
</Project>
