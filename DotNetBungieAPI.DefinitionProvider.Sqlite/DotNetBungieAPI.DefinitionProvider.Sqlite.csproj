<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Title>DotNetBungieAPI.DefinitionProvider.Sqlite</Title>
        <RepositoryUrl>https://github.com/EndGameGl/DotNetBungieAPI</RepositoryUrl>
        <PackageId>DotNetBungieAPI.DefinitionProvider.Sqlite</PackageId>
        <Description>Bungie.net API SQLite definition provider.</Description>
        <Authors>MeGl</Authors>
        <Copyright>Copyright (c) MeGl 2022</Copyright>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <PackageVersion>1.4.3</PackageVersion>
        <AssemblyVersion>1.4.3</AssemblyVersion>
        <FileVersion>1.4.3</FileVersion>
        <TargetFrameworks>net6.0;net7.0</TargetFrameworks>
        <LangVersion>11</LangVersion>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="DotNetBungieAPI.Service.Abstractions" Version="2.8.2" />
      <PackageReference Include="Microsoft.Data.Sqlite" Version="7.0.3" />
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.0" />
    </ItemGroup>

</Project>
